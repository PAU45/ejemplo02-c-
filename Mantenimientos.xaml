<Window x:Class="WpfApp1.Mantenimientos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mantenimientos" Height="320" Width="420" Background="#f4f6fb" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="PanelShadow" BlurRadius="16" ShadowDepth="0" Color="#888" Opacity="0.15"/>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4f8cff"/>
            <Setter Property="BorderBrush" Value="#4f8cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#356ae6"/>
                    <Setter Property="BorderBrush" Value="#356ae6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="14" Padding="28" BorderBrush="#d1d9e6" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{StaticResource PanelShadow}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="220">
                <TextBlock Text="Mantenimientos" FontSize="20" FontWeight="Bold" Foreground="#2d3a4a" Margin="0,0,0,20" HorizontalAlignment="Center"/>
                <Button Content="Conductores" Style="{StaticResource MenuButtonStyle}" Click="Conductores_Click"/>
                <Button Content="Transportistas" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Camiones" Style="{StaticResource MenuButtonStyle}"/>
                <Button Content="Productos" Style="{StaticResource MenuButtonStyle}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>