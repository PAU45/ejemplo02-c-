<Window x:Class="WpfApp1.ConductoresForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario Conductor" Height="320" Width="420" Background="#f4f6fb" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="12" Background="White" Padding="24" Margin="16" BorderBrush="#d1d9e6" BorderThickness="1" >
        <StackPanel>
            <TextBlock Text="Formulario de Conductor" FontSize="20" FontWeight="Bold" Foreground="#2d3a4a" Margin="0,0,0,18" HorizontalAlignment="Center"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Nombre Conductor" FontWeight="SemiBold" Foreground="#4a5a6a"/>
                <TextBox x:Name="txtNombre" Margin="0,5,0,0" Height="28" Padding="6" Background="#f0f3fa" BorderBrush="#bfc9d9" BorderThickness="1" />
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Licencia" FontWeight="SemiBold" Foreground="#4a5a6a"/>
                <TextBox x:Name="txtLicencia" Margin="0,5,0,0" Height="28" Padding="6" Background="#f0f3fa" BorderBrush="#bfc9d9" BorderThickness="1" />
            </StackPanel>

            <StackPanel Margin="0,0,0,18">
                <TextBlock Text="Transporte" FontWeight="SemiBold" Foreground="#4a5a6a"/>
                <TextBox x:Name="txtTransporte" Margin="0,5,0,0" Height="28" Padding="6" Background="#f0f3fa" BorderBrush="#bfc9d9" BorderThickness="1" />
            </StackPanel>

            <Button Content="Guardar" Height="36" Background="#4f8cff" Foreground="White" FontWeight="Bold" BorderBrush="#4f8cff" BorderThickness="1"
                    Cursor="Hand" Click="Guardar_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="6">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Border>
</Window>