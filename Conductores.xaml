<Window x:Class="WpfApp1.Conductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Listado de Conductores" Height="380" Width="540" Background="#f4f6fb" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="PanelShadow" BlurRadius="16" ShadowDepth="0" Color="#888" Opacity="0.15"/>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4f8cff"/>
            <Setter Property="BorderBrush" Value="#4f8cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#356ae6"/>
                    <Setter Property="BorderBrush" Value="#356ae6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="14" Padding="24" BorderBrush="#d1d9e6" BorderThickness="1"
                Effect="{StaticResource PanelShadow}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Listado de Conductores" FontSize="20" FontWeight="Bold" Foreground="#2d3a4a" Margin="0,0,0,16" HorizontalAlignment="Center"/>
                <!-- Tabla con la lista -->
                <DataGrid x:Name="dgConductores" AutoGenerateColumns="False" Height="200" Margin="0,0,0,14"
                          Background="#f8fafc" BorderBrush="#d1d9e6" BorderThickness="1" 
                          RowBackground="White" AlternatingRowBackground="#f0f3fa"
                          ColumnHeaderHeight="32" HeadersVisibility="Column"
                          CanUserAddRows="False" CanUserDeleteRows="False" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="Licencia" Binding="{Binding Licencia}" Width="*"/>
                        <DataGridTextColumn Header="Transporte" Binding="{Binding Transporte}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <!-- Botones de acciones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Agregar" Style="{StaticResource ActionButtonStyle}" Click="Agregar_Click"/>
                    <Button Content="Editar" Style="{StaticResource ActionButtonStyle}" Click="Editar_Click"/>
                    <Button Content="Eliminar" Style="{StaticResource ActionButtonStyle}" Click="Eliminar_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>