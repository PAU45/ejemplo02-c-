<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú Principal" Height="400" Width="600" Background="#f4f6fb" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Sombra para el panel central -->
        <DropShadowEffect x:Key="PanelShadow" BlurRadius="18" ShadowDepth="0" Color="#888" Opacity="0.18"/>
        <!-- Estilo para los botones principales -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4f8cff"/>
            <Setter Property="BorderBrush" Value="#4f8cff"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="8" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#356ae6"/>
                    <Setter Property="BorderBrush" Value="#356ae6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Estilo especial para el botón Salir -->
        <Style x:Key="ExitButtonStyle" BasedOn="{StaticResource MenuButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#ff4f4f"/>
            <Setter Property="BorderBrush" Value="#ff4f4f"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#d43c3c"/>
                    <Setter Property="BorderBrush" Value="#d43c3c"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="18" Padding="36" BorderBrush="#d1d9e6" BorderThickness="1"
                HorizontalAlignment="Center" VerticalAlignment="Center" Effect="{StaticResource PanelShadow}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="240">
                <TextBlock Text="Menú Principal" FontSize="24" FontWeight="Bold" Foreground="#2d3a4a" Margin="0,0,0,28" HorizontalAlignment="Center"/>
                <Button Content="Operaciones" Style="{StaticResource MenuButtonStyle}" Click="Operaciones_Click"/>
                <Button Content="Mantenimientos" Style="{StaticResource MenuButtonStyle}" Click="Mantenimientos_Click"/>
                <Button Content="Reportes" Style="{StaticResource MenuButtonStyle}" Click="Reportes_Click"/>
                <Button Content="Salir" Style="{StaticResource ExitButtonStyle}" Margin="0,18,0,0" Click="Salir_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>